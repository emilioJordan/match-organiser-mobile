{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ğŸš€ Start Dev Server",
      "type": "shell",
      "command": "npm start",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "Angular Live Development Server is listening"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "ğŸ“± Start Android Emulator",
      "type": "shell",
      "command": "emulator",
      "args": [
        "-avd",
        "Medium_Phone_API_36.0"
      ],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "boot completed"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "ğŸ”„ Sync & Run on Emulator",
      "type": "shell",
      "command": "npm run build && npx cap sync android && npx cap run android",
      "dependsOn": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "ğŸ¯ Full Start (Dev + Emulator + Sync)",
      "dependsOrder": "sequence",
      "dependsOn": [
        "ğŸš€ Start Dev Server",
        "ğŸ“± Start Android Emulator",
        "ğŸ”„ Sync & Run on Emulator"
      ],
      "problemMatcher": []
    },
    {
      "label": "ğŸ—ï¸ Build Production",
      "type": "shell",
      "command": "npm run build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
